<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
  <div class="col-8 offset-2">

    <h3>Sign Up</h3>
    <br><br>
    <form action="/signup?_method=PUT" method="POST">

        

      <div class="mb-3">
        <label for="Name" class="form-label">Name</label>
        <input name="signup[name]" value="<%= signup.name %>" type="text" class="form-control"/>
      </div>

      <div class="mb-3">
        <label for="E-mail" class="form-label">E-mail</label>
        <input name="signup[email]" class="form-control"><%= signup.email %></input>
      </div>

     

      <div class="row">
      <div class="mb-3 col-md-4">
        <label for="phone" class="form-label">Phone No.</label>
        <input name="signup[phone]" value="<%= signup.phone %>" type="number" class="form-control"/>
      </div>

      <div class="mb-3 col-md-8">
        <label for="address" class="form-label">Address</label>
        <input
        name="signup[address]"
        value="<%= signup.address %>"
        type="text"
        class="form-control"
      />
      </div>
      </div>


      <button class="btn btn-dark edit-btn mt-3">Submit</button>
    </form>
  </div>
</div>
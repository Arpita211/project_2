<% layout("/layouts/boilerplate")  %>

<body>
 <div class="heading"style="display: block; text-align: center;"><h3>Explore India's  </h3>
<h3>Religious Destinations</h3>
</div>
    
    <div  class="row  row-cols-lg-3 row-cols-md-1">


    <% for(let listing of allListing){%>
      <a href="/listing/<%= listing._id %>" class="listing-link">
    <div class="card col shadow-lg rounded-xl bg-brown"  >
        <img src="<%= listing.image %>" class="card-img-top" alt="listing_image" style="height: 17rem; width :80rem; ">
        <div class="card-img-overlay"></div>
        <div class="card-body" style=" box-shadow: 10px;">
          <p class="card-text">
            <b><%= listing.title %> </b> <button style="border:none;  background-color: rgba(241, 81, 7, 0.959); color:rgb(231, 200, 161);border-radius: 5px; font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;">2D/1N</button><br>
         <b>
  &#8377;
  <%= typeof listing.price === 'number' ? listing.price.toLocaleString("en-IN") : 'N/A' %>
</b>/person<br>

         
           
            <button class="v-btn" style="border: none; ">View details</button>

          </p>
          

        </div>
      
      </div>
      </a>
      <% }%>
    </div>

<form action="/listing/new" method="GET">
  <button style="border: none;border-radius: 5px; background-color: orangered; font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;"> +Create New</button>
  <br><br>
</form>
   
</body>
</html>


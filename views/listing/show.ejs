<% layout("/layouts/boilerplate")  %>
<body>
   <div class="row mt-3">
      <div class="col-8 offset-2">
   <h3> Listing Details</h3><br>
</div> 
   <div class="card col-6 offset-2">
   
      <img src="<%=listing.image%>" class="card-img-top show-img" alt="listing_image" style="height: 30rem;">
  <div class="card-body" >
    <p class="card-text">
      <b><%= listing.title %></b><br>
      <%= listing.description %><br>
      &#8377;<%= listing.price.toLocaleString("en-IN") %><br>
      <%= listing.location %>
   </p>
  </div>
   </div>
  
</div>

<a  href="/listing/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-2">Edit </a>
<a  href="/listing/<%= listing._id %>/book" class="btn btn-dark col-1 offset-2">Book Now </a>
</body>

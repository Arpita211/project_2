<% layout("/layouts/boilerplate") %>
<div class="row mt-5 mb-5">
  <div class="col-8 offset-2">

<h3>Book Now</h3><br><br>

<form action="/listing/<%= listing._id %>/book?_method=PUT" method="POST">
  <div class="mb-3">
    <label for="Name" class="form-label">Name</label>
    <input name="user[name]" type="text" class="form-control"/>
  </div>

  <div class="mb-3">
    <label for="Email" class="form-label">Email</label>
    <input name="user[email]" type="email" class="form-control"/>
  </div>

  <div class="mb-3">
    <label for="phone number" class="form-label">Phone Number</label>
    <input name="user[phone]" type="number" class="form-control"/>
  </div>

  <button type="submit" class="btn btn-dark col-3 offset-2">Confirm Booking</button>
  
</form>
</div>
</div>
